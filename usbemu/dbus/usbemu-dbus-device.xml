<?xml version="1.0" encoding="UTF-8" ?>
<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
  <!--
    org.usbemu.UsbemuManager.Device:
  -->
  <interface name="org.usbemu.UsbemuManager.Device">
    <!-- Bind: Bind to underlying hardware. -->
    <method name="Bind"/>

    <!-- Bind: Unbind from underlying hardware. -->
    <method name="Unbind"/>

    <!-- DeviceBound: Notifies device is bound. -->
    <signal name="DeviceBound"/>

    <!-- DeviceBound: Notifies device is unbound. -->
    <signal name="DeviceUnbound"/>

    <!-- Bound: Indicates whether device is currently bound. -->
    <property name="Bound" type="b" access="read"/>

    <!--
      Udi:

      Operating-system specific transient device hardware identifier.
    -->
    <property name="Udi" type="s" access="read"/>
  </interface>
</node>
